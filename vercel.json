{
    "version": 2,
    "builds": [
      {
        "src": "server.js",  
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",  
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/asteroids/(.*)",
        "dest": "/api/asteroids/:1"
      },
      {
        "src": "/api/asteroids/byDate/(.*)",
        "dest": "/api/asteroids/byDate/:1"
      },
      {
        "src": "/(.*)",  
        "dest": "/public/$1"
      }
    ],
    "env": {
